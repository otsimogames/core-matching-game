{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ecmaFeatures": {
        "blockBindings": true
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            0,
            "never"
        ],
        "no-console": [
            0
        ],
        "prefer-const": "error"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Phaser": true,
        "otsimo": true,
        "sprintf": true
    },
    "extends": "eslint:recommended"
}